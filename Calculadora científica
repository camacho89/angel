Public static string calculadora (string dato1, String dato2, String signo)( 
Double resultado=0.0
String respuesta;
  If(signo,equals("-")){
  Resultado=Double.parseDouble(dato1)-Double.parseDouble(dato2);
 }
  If(signo,equals("+")){
  Resultado=Double.parseDouble(dato1)+Double.parseDouble(dato2);
 }
  If(signo,equals("*")){
  Resultado=Double.parseDouble(dato1)*Double.parseDouble(dato2);
 } 
  If(signo,equals("/")){
  Resultado=Double.parseDouble(dato1)/Double.parseDouble(dato2);
 }
Respuesta=resultado.toString();
return respuesta;
 }
